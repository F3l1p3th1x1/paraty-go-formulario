{
  "name": "paraty-go-landing",
  "version": "1.0.0",
  "description": "Landing page do Paraty GO! - Marketplace de Turismo",
  "scripts": {
    "dev": "npx live-server --port=3000 --open=index.html --watch=index.html,confirmacao.html --wait=2000 --no-browser",
    "dev:open": "npx live-server --port=3000 --open=index.html --watch=index.html,confirmacao.html --wait=2000",
    "server": "node server.js",
    "start": "concurrently \"npm run server\" \"npm run dev\"",
    "dev:full": "concurrently --names \"API,WEB\" --prefix-colors \"cyan,green\" \"npm run server\" \"npm run dev:open\"",
    "monitor": "node monitor.js",
    "test:email": "node test-email.js",
    "test:responsive": "node test-responsive.js",
    "test:visual": "node test-visual.js",
    "health": "curl -s http://localhost:3001/api/health || echo 'Servidor offline'",
    "db:health": "node db-health.js"
  },
  "keywords": [
    "paraty",
    "turismo",
    "landing-page"
  ],
  "author": "Paraty GO!",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/firestore": "^7.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase": "^12.6.0",
    "firebase-admin": "^12.0.0",
    "multer": "^1.4.5-lts.1",
    "resend": "^2.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "live-server": "^1.2.2"
  },
  "optionalDependencies": {
    "puppeteer": "^21.11.0"
  },
  "engines": {
    "node": ">=18.x"
  }
}
